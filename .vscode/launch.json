{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "dezog",
            "request": "launch",
            "name": "Debug OpenMSX",
            "remoteType": "openmsx",
            "listFiles": [
                {
                    "path": "machines/msx/hello.lst",
                    "useFiles": true,
                    "asm": "sjasmplus",
                    "mainFile": "machines/msx/helloworld.asm"
                }
            ],
            "openmsx": {
                //"pcInSlot": "1 X 14" // nextor driver (rookie mapper)
                //"pcInSlot": "3 2 28" // usbether in 512kb mapper
            },
            "commandsAfterLaunch": [
                "-e openmsx_info version"
            ],
            "resetOnLaunch": false,
            "rootFolder": "${workspaceFolder}/machines/msx",
            "tmpDir": ".tmp"
        },
        {
			"type": "dezog",
			"request": "launch",
			"name": "Dezog-Agon-Hello",
			"rootFolder": "${workspaceFolder}/machines/msx",
			"remoteType": "agonelectronhal",
			"agonelectronhal": {
				"serial":"/dev/tty.usbserial-211240",
				"baudrate": 460800,
				"loadObjBank": 5
			},
			"sjasmplus": [
				{
					"path": "bios.sld",
				},
				{
					"path": "hello.sld",
				}
			],
			"startAutomatically": true,
			"loadObjs": [
				{ "path": "bios.bin", "start": "0x0000" },
				{ "path": "hello.bin", "start": "0x4000" }
			],
			"topOfStack": "0xf380",
			"commandsAfterLaunch": [
				//"-exec e load -0 msx/bios.bin",
				//"-exec e load -1 msx/bios.bin",
				//"-exec e load -0 msx/kvalley.bin",
                // "-exec e load msx/hello.bin",
				"-exec e run"
            ],
			"preLaunchTask": "build"
		},
        {
			"type": "dezog",
			"request": "launch",
			"name": "Dezog-Agon-screen2-test",
			"rootFolder": "${workspaceFolder}/machines/msx",
			"remoteType": "agonelectronhal",
			"agonelectronhal": {
				"serial":"/dev/tty.usbserial-211240",
				"baudrate": 460800,
				"loadObjBank": 5
			},
			"sjasmplus": [
				{
					"path": "bios.sld",
				},
				{
					"path": "test.sld",
				}
			],
			"startAutomatically": true,
			"loadObjs": [
				{ "path": "bios.bin", "start": "0x0000" },
				{ "path": "test.bin", "start": "0x4000" }
			],
			"topOfStack": "0xf380",
			"commandsAfterLaunch": [
				//"-exec e load -0 msx/bios.bin",
				//"-exec e load -1 msx/bios.bin",
				//"-exec e load -0 msx/kvalley.bin",
                // "-exec e load msx/hello.bin",
				// "-exec e run"
            ],
			"preLaunchTask": "build"
		}
    ]
}